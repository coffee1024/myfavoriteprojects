<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
	default-lazy-init="true">
	
	<!-- For TRS Search -->
	<bean id="trsConnectionDao" class="com.trs.photo.dao.TrsConnectionDao">
		<property name="hostname" value="${database.trsserver.hostname}" />
		<property name="hostport" value="${database.trsserver.hostport}" />
		<property name="username" value="${database.trsserver.username}" />
		<property name="password" value="${database.trsserver.password}" />
	</bean>
	
	<bean id="trsAdvancedSearchDao"
		class="com.trs.photo.dao.TrsAdvancedSearchDao"
		parent="trsConnectionDao">
		<property name="dbname"
			value="${database.trsserver.database}" />
		<property name="orderBy"
			value="${database.trsserver.orderBy}" />
		<property name="beanName"
			value="${database.trsserver.beanName}" />
		<property name="pkColumn"
			value="${database.trsserver.pkColumn}" />
		<property name="summaryColumns"
			value="${database.trsserver.summaryColumns}" />
		<property name="highlightColumns"
			value="${database.trsserver.highlightColumns}" />
		<property name="detailColumns"
			value="${database.trsserver.detailColumns}" />
	</bean>
	
	<bean id="trsPubSearchDao"
		class="com.trs.photo.dao.TrsPubSearchDao"
		parent="trsConnectionDao">
		<property name="dbname"
			value="${database.trsserver.database.pub}" />
		<property name="orderBy"
			value="${database.trsserver.orderBy.pub}" />
		<property name="beanName"
			value="${database.trsserver.beanName.pub}" />
		<property name="pkColumn"
			value="${database.trsserver.pkColumn.pub}" />
		<property name="summaryColumns"
			value="${database.trsserver.summaryColumns.pub}" />
		<property name="highlightColumns"
			value="${database.trsserver.highlightColumns.pub}" />
		<property name="detailColumns"
			value="${database.trsserver.detailColumns.pub}" />
	</bean>
</beans>