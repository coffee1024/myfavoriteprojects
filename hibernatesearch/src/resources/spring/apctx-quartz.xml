<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-lazy-init="true">
	
	<description>quartz定时任务配置文件</description>
	
	<!-- 日志归档定时任务 -->
	<bean id="loggerjob" class="com.trs.photo.quartz.LoggerBackup"></bean>
    <bean id="loggerjobtask" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <ref local="loggerjob"/>
        </property>
        <property name="targetMethod">
            <value>doLoggerBackup</value>
        </property>
    </bean>
    <!-- 获取方正采编图片见报信息定时任务 -->
    <bean id="picpaperjob" class="com.trs.photo.quartz.GetPicPaperInfo"></bean>
    <bean id="picpaperjobtask" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
    	<property name="targetObject">
            <ref local="picpaperjob"/>
        </property>
        <property name="targetMethod">
            <value>GetPhotoPaperInfo</value>
        </property>
    </bean>
    <!-- 发布库定时清除图片任务 -->
    <bean id="clearfbkjob" class="com.trs.photo.quartz.ClearPicInFbk"></bean>
    <bean id="clearfbkjobtask" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
    	<property name="targetObject">
            <ref local="clearfbkjob"/>
        </property>
        <property name="targetMethod">
            <value>clearUnPublishedPic</value>
        </property>
    </bean>
    <!-- 成品库定时清除图片任务 -->
    <bean id="clearcpkjob" class="com.trs.photo.quartz.ClearPicInCpk"></bean>
    <bean id="clearcpkjobtask" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
    	<property name="targetObject">
            <ref local="clearcpkjob"/>
        </property>
        <property name="targetMethod">
            <value>clearUnusedPic</value>
        </property>
    </bean>
    <!-- 定时清除上传错误图片任务 -->
    <bean id="clearuploadjob" class="com.trs.photo.quartz.ClearUploadPic"></bean>
    <bean id="clearuploadjobtask" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
    	<property name="targetObject">
            <ref local="clearuploadjob"/>
        </property>
        <property name="targetMethod">
            <value>deletePics</value>
        </property>
    </bean>
    <!-- 图片操作记录定时清除任务 -->
    <bean id="clearpicopejob" class="com.trs.photo.quartz.ClearPicOperation"></bean>
    <bean id="clearpicopejobtask" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
    	<property name="targetObject">
            <ref local="clearpicopejob"/>
        </property>
        <property name="targetMethod">
            <value>clearOldPicOperation</value>
        </property>
    </bean>
    <!-- 定时清除上传错误图片任务时间规则 -->
    <bean id="clearuploadcron" class="org.springframework.scheduling.quartz.CronTriggerBean">
    	<property name="jobDetail">
            <ref bean="clearuploadjobtask"/>
        </property>
        <property name="cronExpression">
            <value>59 59 23 * * ?</value>
        </property>
    </bean>
    
	<!-- 日志归档时间规则(此时间可由后台更改，详见com.trs.photo,quartz/ChangeCorn.java) -->
    <bean id = "loggercron" class = "org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail">
            <ref bean="loggerjobtask"/>
        </property>
        <property name="cronExpression">
            <value>11 11 3 19 * ?</value>
        </property>
    </bean>
    <!-- 获取方正采编图片见报信息时间规则 -->
    <bean id="picpapercron" class="org.springframework.scheduling.quartz.CronTriggerBean">
    	<property name="jobDetail">
            <ref bean="picpaperjobtask"/>
        </property>
        <property name="cronExpression">
            <value>45 28 15 * * ?</value>
        </property>
    </bean>
    <!-- 发布库定时清除图片任务时间规则 -->
    <bean id="clearfbkcron" class="org.springframework.scheduling.quartz.CronTriggerBean">
    	<property name="jobDetail">
            <ref bean="clearfbkjobtask"/>
        </property>
        <property name="cronExpression">
            <value>59 59 23 * * ?</value>
        </property>
    </bean>
    <!-- 成品库定时清除图片任务时间规则 -->
    <bean id="clearcpkcron" class="org.springframework.scheduling.quartz.CronTriggerBean">
    	<property name="jobDetail">
            <ref bean="clearcpkjobtask"/>
        </property>
        <property name="cronExpression">
            <value>59 59 23 * * ?</value>
        </property>
    </bean>
    <!-- 定时清除图片操作任务时间规则 -->
    <bean id="clearpicopecron" class="org.springframework.scheduling.quartz.CronTriggerBean">
    	<property name="jobDetail">
            <ref bean="clearpicopejobtask"/>
        </property>
        <property name="cronExpression">
            <value>59 59 23 12 12 ?</value>
        </property>
    </bean>
    
    <bean id="dologger" class = "org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref local ="loggercron"/>
                <ref local ="picpapercron"/>
                <ref local ="clearfbkcron"/>
                <ref local ="clearcpkcron"/>
                <ref local ="clearpicopecron"/>
            </list>
        </property>
    </bean>
</beans>